<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Add Current Executive</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/executives/current">Current Executives</a></li>
                    <li class="breadcrumb-item active">Add Executive</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Executive Form</h4>
                    <div class="col-auto">
                        <a href="/executives/current" class="btn btn-primary">Current Executives</a>
                    </div>
                </div>

            </div>
            <div class="card-body">
                <div class="mb-4">
                    <% if(error.length> 0) { %>
                        <div class="alert alert-danger text-center mb-4 flash" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                    <% if(message.length> 0) { %>
                        <div class="alert alert-success text-center mb-4 flash" role="alert">
                            <%= message %>
                        </div>
                    <% } %>
                </div>
                <form class="custom-validation" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-5 ">
                            <div class="row mb-4">
                                <label for="name" class="col-sm-3 col-form-label">Name</label>

                                <div class="col-sm-9">
                                    <input type="text"  name="name" placeholder="Executive's Name" required class="form-control" id="name">
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="position" class="col-sm-3 col-form-label">Position</label>

                                <div class="col-sm-9">
                                    <input type="text"  name="position" placeholder="e.g President" required class="form-control" id="position">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 ms-lg-auto">
                            <div class="row mb-4">
                                <label for="year" class="col-sm-3 col-form-label">Year </label>

                                <div class="col-sm-9">
                                    <input type="number" id="year" required name="year" data-parsley-type="digits" placeholder="e.g 2022"  class="form-control" >
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="file" class="col-sm-3 col-form-label">Image </label>

                                <div class="col-sm-9">
                                    <input name="file" accept=".png, .jpg, .jpeg, .webp " type="file" id="file" class="form-control custom-file-input" required >
                                </div>
                            </div>
                            <div class="mb-3 d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Add Executive</button>
                            </div>
                        </div>
                    </div>
                </form>



            </div>
        </div>
    </div> <!-- end col -->
</div>
<%- contentFor('FooterJs') %>
<script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>
<script>
    $(document).ready(function() {
        $('.custom-validation').parsley();
    });
</script>

<%- contentFor('BottomJs') %>
