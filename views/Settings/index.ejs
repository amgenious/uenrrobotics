<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Add Project</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">App</a></li>
                    <li class="breadcrumb-item active">Add Project</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<form class="custom-validation" method="post" id="aboutForm">
    <div class="row">
        <div class="col-lg-12">
          <div class="card">
              <div class="card-body">
                  <div class="mb-4">
                      <% if(error.length> 0) { %>
                          <div class="card">
                              <div class="card-body">
                                  <div class="alert alert-danger text-center mb-4 flash" role="alert">
                                      <%= error %>
                                  </div>
                              </div>
                          </div>
                      <% } %>
                      <% if(message.length> 0) { %>
                          <div class="card">
                              <div class="card-body">
                                  <div class="alert alert-success text-center mb-4 flash" role="alert">
                                      <%= message %>
                                  </div>
                              </div>
                          </div>
                      <% } %>
                  </div>
                  <div class="row">
                      <div class="col-lg-5 ">
                          <div class="row mb-4">
                              <label for="location" class="col-sm-3 col-form-label">Address </label>

                              <div class="col-sm-9">
                                  <input type="text"  value="<%= settings.location %>" name="location" placeholder="Club Location" required class="form-control" id="location">
                              </div>
                          </div>
                          <div class="row mb-4">
                              <label for="phone" class="col-sm-3 col-form-label">Contact Phone</label>

                              <div class="col-sm-9">
                                  <input type="text" data-parsley-length="[9,13]"  value="<%= settings.phone %>" data-parsley-type="number" name="phone" placeholder="Club Phone Number" required class="form-control" id="phone">
                              </div>
                          </div>
                          <div class="row mb-4">
                              <label for="facebook" class="col-sm-3 col-form-label">Facebook Link</label>

                              <div class="col-sm-9">
                                  <input type="text"  data-parsley-type="url"  value="<%= settings.facebook %>" name="facebook" placeholder="https://facebook.com/clubname" required class="form-control" id="facebook">
                              </div>
                          </div>
                      </div>
                      <div class="col-lg-6 ms-lg-auto">
                          <div class="row mb-4">
                              <label for="email" class="col-sm-3 col-form-label">Email </label>

                              <div class="col-sm-9">
                                  <input type="email" id="email" name="email"  value="<%= settings.email %>" data-parsley-type="email" required placeholder="Club Email"  class="form-control" >
                              </div>
                          </div>
                          <div class="row mb-4">
                              <label for="instagram" class="col-sm-3 col-form-label">Instagram Link</label>

                              <div class="col-sm-9">
                                  <input type="text"  data-parsley-type="url"  value="<%= settings.instagram %>" name="instagram" placeholder="https://instagram.com/clubname" required class="form-control" id="instagram">
                              </div>
                          </div>
                          <div class="row mb-4">
                              <label for="twitter" class="col-sm-3 col-form-label">Twitter Link</label>

                              <div class="col-sm-9">
                                  <input type="text"  data-parsley-type="url" value="<%= settings.twitter %>" name="twitter" placeholder="https://twitter.com/clubname" required class="form-control" id="twitter">
                              </div>
                          </div>
                          <div class="row mb-4">
                              <label for="youtube" class="col-sm-3 col-form-label">Youtube Link</label>

                              <div class="col-sm-9">
                                  <input type="text"  data-parsley-type="url" value="<%= settings.linkedin %>" name="linkedin" placeholder="https://youtube.com/clubname" required class="form-control" id="youtube">
                              </div>
                          </div>

                      </div>
                      <div class="col-12">
                          <div class="mb-3">
                              <label class="custom-file-label" for="about">About Us</label>
                              <textarea name="about" id="about" class="form-control " rows="3" required ><%= settings.about %></textarea>
                          </div>
                      </div>
                  </div>

              </div>
          </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row mb-4">
        <div class="col text-end">
            <button type="submit" class="btn btn-primary"> <i class="uil uil-file-alt me-1"></i> Update Settings </button>
        </div> <!-- end col -->
    </div> <!-- end row-->
</form>
<%- contentFor('FooterJs') %>

<script src="public/assets/libs/tinymce/tinymce.min.js"></script>
<script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>
<script>
    if($("#about").length > 0){
        tinymce.init({
            selector: "textarea#about",
            height:300,
            plugins: [
                "advlist autolink link lists preview hr anchor spellchecker",
                "wordcount fullscreen insertdatetime nonbreaking",
                "save contextmenu directionality emoticons paste"
            ],
            toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link | preview fullpage | emoticons",
            setup: function (editor) {
                editor.on('change', function () {
                    editor.save();
                });
            }
        });
    }

    $('.custom-validation').parsley();
</script>
<%- contentFor('BottomJs') %>
