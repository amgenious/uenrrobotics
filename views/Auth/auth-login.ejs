<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Log In | UENR Robotics Club - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="UENR Robotics Club Management System" name="description" />
    <meta content="UENR Robotics Club" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="public/assets/images/favicon.ico">

    <%- include('../Partials/HeaderStyle')  %>

</head>

<body class="authentication-bg">

    <div class="home-btn d-none d-sm-block">
        <a href="/" class="text-dark"><i class="mdi mdi-home-variant h2"></i></a>
    </div>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="/" class="mb-5 d-block auth-logo">
                            <img src="public/images/urc_logo.png" alt="Logo"  class="logo logo-dark">
                            <img src="public/images/urc_logo.png" alt="Logo" class="logo logo-light">
                        </a>
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Welcome Back !</h5>
                                <p class="text-muted">Sign in to continue to URC Admin Dashboard.</p>
                            </div>
                            <div class="p-2 mt-4">
                                <% if(error.length> 0) { %>
                                    <div class="alert alert-danger text-center mb-4 flash" role="alert">
                                        <%= error %>
                                    </div>
                                <% } %>
                                <% if(message.length> 0) { %>
                                    <div class="alert alert-success text-center mb-4 flash" role="alert">
                                        <%= message %>
                                    </div>
                                <% } %>
                                <form method="post">

                                    <div class="mb-3">
                                        <label class="form-label" for="username">Email</label>
                                        <input type="email" class="form-control" id="username" name="email"
                                          placeholder="admin@urc.com">
                                    </div>

                                    <div class="mb-3">
                                        <div class="float-end">
                                            <a href="/forgot-password" class="text-muted">Forgot password?</a>
                                        </div>
                                        <label class="form-label" for="userpassword">Password</label>
                                        <input type="password" class="form-control" id="userpassword" name="password"
                                            placeholder="*******" >
                                    </div>



                                    <div class="mt-3 text-end">
                                        <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Log
                                            In</button>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <p>Â©
                            <script>document.write(String(new Date().getFullYear()))</script> URC. Crafted with <i
                                class="mdi mdi-heart text-danger"></i> by <a href="https://pennycodes.dev" target="_blank">Pennycodes</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>

    <%- include('../Partials/VendorScript')  %>

    <script src="public/assets/js/app.js"></script>

</body>

</html>
