<script>

    $("#sub-form").submit(function (e) {
        e.preventDefault();
        var email = $("#email").val();
        $.ajax({
            url: '/subscribe',
            type: 'POST',
            data: { email },
            dataType: 'json',
            cache: false,
            processData: true,
            beforeSend: function () {
                $('small.processing').removeClass('d-none');
                $('small.success').addClass('d-none');
                $('small.error').addClass('d-none');
                $('small.unknown').addClass('d-none');

            },
            success: function (data) {
                if (data.status === 200) {
                    $('small.processing').addClass('d-none');
                    $('small.success').removeClass('d-none');
                    $('small.error').addClass('d-none');
                    $('small.unknown').addClass('d-none');
                } else {
                    $('small.processing').addClass('d-none');
                    $('small.success').addClass('d-none');
                    $('small.error').removeClass('d-none');
                }
                $("#email").val('');
            },
            error: function (err) {
                $('small.processing').addClass('d-none');
                $('small.success').addClass('d-none');
                $('small.error').addClass('d-none');
                $('small.unknown').removeClass('d-none');
            }

        })
    });
</script>
